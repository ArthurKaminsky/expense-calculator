{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@testLib/test-library": [
        "libs/test-library/src"
      ],
      "@testLib/test-library/*": [
        "libs/test-library/src/*"
      ],
      "testLibrary2/test-library-2": [
        "libs/test-library-2/src"
      ],
      "testLibrary2/test-library-2/*": [
        "libs/test-library-2/src/*"
      ]
    }
  }
}